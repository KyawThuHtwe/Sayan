<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.HomeFragment"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:theme="@style/Widget.MaterialComponents.CardView"
        app:cardCornerRadius="@dimen/_10sdp">
        <LinearLayout
            android:id="@+id/notice_board"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="@color/colorPrimary"
                android:padding="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/month"
                        android:textColor="@color/colorWhite"
                        android:text="@string/month"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_20ssp" />
                </LinearLayout>
                <TextView
                    android:id="@+id/sayan"
                    android:textColor="@color/colorWhite"
                    android:text="@string/sayan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_20ssp" />

            </LinearLayout>

            <LinearLayout
                android:background="@color/colorIncome"
                android:padding="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/t1"
                    android:textColor="@color/colorWhite"
                    android:text="@string/income"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_14ssp"/>
                <TextView
                    android:id="@+id/income"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:textColor="@color/colorWhite"
                    android:text="@string/_0000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_14ssp"
                    tools:ignore="RtlHardcoded" />
                <TextView
                    android:id="@+id/ks1"
                    android:textColor="@color/colorWhite"
                    android:text="@string/ks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_14ssp" />

            </LinearLayout>
            <LinearLayout
                android:background="@color/colorOutcome"
                android:padding="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/t2"
                    android:textColor="@color/colorWhite"
                    android:text="@string/outcome"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_14ssp" />
                <TextView
                    android:id="@+id/outcome"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:textColor="@color/colorWhite"
                    android:text="@string/_0000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_14ssp"
                    tools:ignore="RtlHardcoded" />
                <TextView
                    android:id="@+id/ks2"
                    android:textColor="@color/colorWhite"
                    android:text="@string/ks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_14ssp" />
            </LinearLayout>
            <LinearLayout
                android:padding="@dimen/_10sdp"
                android:background="@color/colorProfit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/t3"
                    android:textColor="@color/colorWhite"
                    android:text="@string/profit"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_14ssp" />
                <TextView
                    android:id="@+id/profit"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:textColor="@color/colorWhite"
                    android:text="@string/_0000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_14ssp"
                    tools:ignore="RtlHardcoded" />
                <TextView
                    android:id="@+id/ks3"
                    android:textColor="@color/colorWhite"
                    android:text="@string/ks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_14ssp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_marginLeft="@dimen/_10ssp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="RtlHardcoded"
        android:baselineAligned="false">
        <LinearLayout
            android:gravity="center"
            android:padding="@dimen/_10ssp"
            android:background="@drawable/corner_radius_bound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/up"
                android:src="@drawable/upward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tint="@color/colorTextPrimary"
                android:contentDescription="@string/app_name" />

        </LinearLayout>
        <LinearLayout
            android:gravity="right|center_vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/today"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:background="@drawable/corner_radius_bound"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/colorTextPrimary"
                android:text="@string/month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_14ssp" />
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="@dimen/_10sdp"
                android:layout_margin="1dp"
                android:layout_width="@dimen/_115sdp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="@drawable/corner_radius_bound"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/income_change"
                        android:gravity="center"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/colorTextPrimary"
                        android:text="@string/income"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/outcome_change"
                        android:gravity="center"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/colorTextPrimary"
                        android:text="@string/outcome"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:padding="@dimen/_10sdp"
        android:background="@drawable/corner_radius_bound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/t4"
            android:layout_marginRight="@dimen/_5sdp"
            android:textColor="@color/colorTextPrimary"
            android:text="@string/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_14ssp"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/today_type"
            android:textColor="@color/colorTextPrimary"
            android:text="@string/today_income"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_14ssp" />
        <TextView
            android:id="@+id/today_in_out"
            android:layout_marginRight="@dimen/_5sdp"
            android:textColor="@color/colorTextPrimary"
            android:text="@string/_0000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_14ssp"
            tools:ignore="RtlHardcoded" />
        <TextView
            android:id="@+id/ks4"
            android:textColor="@color/colorTextPrimary"
            android:text="@string/ks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_14ssp" />
    </LinearLayout>



    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add"
            android:layout_margin="@dimen/_15sdp"
            android:layout_gravity="bottom|right"
            android:src="@drawable/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="RtlHardcoded" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</LinearLayout>