<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.DailyFragment">

   <LinearLayout
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       tools:ignore="UselessParent">
       <LinearLayout
           android:layout_margin="@dimen/_10sdp"
           android:background="@drawable/corner_radius_bound"
           android:padding="@dimen/_10sdp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:id="@+id/t1"
               android:textColor="@color/colorTextPrimary"
               android:textSize="@dimen/_12ssp"
               android:text="@string/date"
               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="wrap_content"/>
           <TextView
               android:id="@+id/today"
               android:gravity="right"
               android:textColor="@color/colorTextPrimary"
               android:text="@string/month"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="@dimen/_12ssp" />
       </LinearLayout>
       <LinearLayout
           android:layout_marginLeft="@dimen/_10sdp"
           android:layout_marginBottom="@dimen/_10sdp"
           android:layout_marginRight="@dimen/_10sdp"
           android:gravity="center_vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           tools:ignore="RtlHardcoded"
           android:baselineAligned="false">
           <androidx.cardview.widget.CardView
               app:cardCornerRadius="@dimen/_10sdp"
               android:layout_weight="1"
               android:layout_margin="@dimen/_1sdp"
               android:layout_width="0dp"
               android:layout_height="wrap_content">

               <LinearLayout
                   android:background="@drawable/corner_radius_bound"
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <LinearLayout
                       android:id="@+id/listShow"
                       android:backgroundTint="@color/colorTextSecondary"
                       android:background="@drawable/corner_radius_bound"
                       android:gravity="center"
                       android:layout_gravity="center"
                       android:padding="@dimen/_10sdp"
                       android:layout_weight="1"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       tools:ignore="UnusedAttribute">
                       <TextView
                           android:textSize="@dimen/_12ssp"
                           android:textColor="@color/colorTextPrimary"
                           android:text="List"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"/>
                   </LinearLayout>

                   <LinearLayout
                       android:id="@+id/pieChartShow"
                       android:padding="@dimen/_10sdp"
                       android:gravity="center"
                       android:layout_gravity="center"
                       android:layout_weight="1"
                        android:layout_width="0dp"
                       android:layout_height="wrap_content">
                       <TextView
                           android:textSize="@dimen/_12ssp"
                           android:textColor="@color/colorTextPrimary"
                           android:text="@string/piechart"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"/>
                   </LinearLayout>
               </LinearLayout>
           </androidx.cardview.widget.CardView>
           <View
               android:layout_width="@dimen/_10sdp"
               android:layout_height="@dimen/_10sdp"/>
           <androidx.cardview.widget.CardView
               app:cardCornerRadius="@dimen/_10sdp"
               android:layout_margin="1dp"
               android:layout_width="@dimen/_130sdp"
               android:layout_height="wrap_content">
               <LinearLayout
                   android:background="@drawable/corner_radius_bound"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <TextView
                       android:id="@+id/income_change"
                       android:gravity="center"
                       android:paddingTop="@dimen/_10sdp"
                       android:paddingBottom="@dimen/_10sdp"
                       android:textSize="@dimen/_12ssp"
                       android:textColor="@color/colorTextPrimary"
                       android:text="@string/income"
                       android:layout_weight="1"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"/>
                   <TextView
                       android:id="@+id/outcome_change"
                       android:gravity="center"
                       android:paddingTop="@dimen/_10sdp"
                       android:paddingBottom="@dimen/_10sdp"
                       android:textSize="@dimen/_12ssp"
                       android:textColor="@color/colorTextPrimary"
                       android:text="@string/outcome"
                       android:layout_weight="1"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"/>
               </LinearLayout>
           </androidx.cardview.widget.CardView>
       </LinearLayout>

       <LinearLayout
           android:layout_marginBottom="@dimen/_10sdp"
           android:layout_marginLeft="@dimen/_10sdp"
           android:layout_marginRight="@dimen/_10sdp"
           android:padding="@dimen/_10sdp"
           android:background="@drawable/corner_radius_bound"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:id="@+id/today_type"
               android:textColor="@color/colorTextPrimary"
               android:text="@string/today_income"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="@dimen/_12ssp" />
           <TextView
               android:id="@+id/t4"
               android:layout_marginLeft="@dimen/_5sdp"
               android:textColor="@color/colorTextPrimary"
               android:text="@string/total"
               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:textSize="@dimen/_12ssp"
               tools:ignore="RtlHardcoded" />

           <TextView
               android:id="@+id/today_in_out"
               android:layout_marginRight="@dimen/_5sdp"
               android:textColor="@color/colorTextPrimary"
               android:text="@string/_0000"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="@dimen/_12ssp"
               tools:ignore="RtlHardcoded" />
           <TextView
               android:id="@+id/ks4"
               android:textColor="@color/colorTextPrimary"
               android:text="@string/ks"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="@dimen/_12ssp" />
       </LinearLayout>
       <androidx.coordinatorlayout.widget.CoordinatorLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <com.github.mikephil.charting.charts.PieChart
               android:visibility="gone"
               android:id="@+id/pieChart"
               android:layout_width="match_parent"
               android:layout_height="match_parent"/>

           <androidx.recyclerview.widget.RecyclerView
               android:id="@+id/recyclerView"
               android:layout_width="match_parent"
               android:layout_height="match_parent"/>
           <com.google.android.material.floatingactionbutton.FloatingActionButton
               android:id="@+id/add"
               android:layout_margin="@dimen/_15sdp"
               android:layout_gravity="bottom|right"
               android:src="@drawable/add"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               tools:ignore="RtlHardcoded" />

       </androidx.coordinatorlayout.widget.CoordinatorLayout>
   </LinearLayout>
</FrameLayout>